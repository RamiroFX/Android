<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crear_grupo_titulo"
        android:id="@+id/tit_creacion_grupo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:textSize="@dimen/tamanho_titulo"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crear_grupo_descripcion"
        android:id="@+id/desc_actiividad_creacion_grupo"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tit_creacion_grupo"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="@dimen/desc_actividad"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/crear_grupo_hint_nombre"
        android:ems="15"
        android:id="@+id/creacion_nombre_grupo"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/desc_actiividad_creacion_grupo"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="15"
        android:hint="@string/crear_grupo_hint_objetivo"
        android:id="@+id/creacion_objetivo_encuentro"
        android:layout_below="@id/creacion_nombre_grupo"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crear_grupo_boton_creargrupo"
        android:id="@+id/boton_crear_grupo"
        android:layout_below="@+id/creacion_objetivo_encuentro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="crearGrupo"/>


</RelativeLayout>