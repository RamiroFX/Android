<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="py.com.misgruposv03.activities.CrearCuentaActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear Cuenta"
            android:id="@+id/crear_cuenta_titulo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="15dp"
            android:textSize="@dimen/tamanho_titulo"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Al crear una cuenta, podrás crear grupos o acceder a grupos ya creados para conocer personas que están cerca de ti."
            android:id="@+id/crear_cuenta_descripcion"
            android:layout_below="@+id/crear_cuenta_titulo"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/desc_actividad"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:id="@+id/imageView"
            android:src="@drawable/user_black_icon"
            android:layout_below="@+id/crear_cuenta_descripcion"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/crear_cuenta_hint_nombre"
            android:ems="12"
            android:id="@+id/crear_cuenta_nombreapellido"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/crear_cuenta_hint_nickname"
            android:ems="12"
            android:id="@+id/crear_cuenta_nickname"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/crear_cuenta_nombreapellido"
            android:layout_centerHorizontal="true"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/crear_cuenta_hint_telefono"
            android:ems="12"
            android:id="@+id/crear_cuenta_telefono"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/crear_cuenta_nickname"
            android:layout_centerHorizontal="true"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/crear_cuenta_hint_email"
            android:ems="12"
            android:id="@+id/crear_cuenta_email"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/crear_cuenta_telefono"
            android:layout_centerHorizontal="true"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/crear_cuenta_hint_password"
            android:inputType="textPassword"
            android:ems="12"
            android:id="@+id/crear_cuenta_password"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/crear_cuenta_email"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crear_cuenta_boton_registrate"
            android:id="@+id/crear_cuenta_btn_registrate"
            android:layout_below="@+id/crear_cuenta_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:onClick="crearCuenta"
            />


    </RelativeLayout>

</ScrollView>
